@model MusicLib.Models.RegisterModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Registration"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="validation"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input type="email" class="form-control" asp-for="Email" aria-describedby="emailHelp"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">@Localizer["Password"]</label>
                <input asp-for="Password" class="form-control" placeholder="Admin" type="password" id="Password" name="Password" />
                <input type="checkbox" id="ShowPassword" onclick="togglePasswordVisibility()">@Localizer["Show Password"]
                <span asp-validation-for="Password" class="text-danger"></span>
                
            </div>
            <div class="form-group">
                <label asp-for="PasswordConfirm" class="control-label">@Localizer["Password Confirm"]</label>
                <input asp-for="PasswordConfirm" class="form-control" placeholder="Admin" type="password" id="PasswordConfirm" name="PasswordConfirm" />
                <input type="checkbox" id="ShowPasswordConfirm" onclick="togglePasswordConfirmVisibility()">@Localizer["Show Password"]
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                
            </div>
            <div class="form-group">
                <input type="submit" value="@Localizer["Check in"]" class="btn btn-primary" />
                
            </div>
        </form>
    </div>
</div>
<script>
    function togglePasswordVisibility() {
        var passwordField = document.getElementById("Password");
        var showPasswordCheckbox = document.getElementById("ShowPassword");

        if (showPasswordCheckbox.checked) {
            passwordField.type = "text";
        } else {
            passwordField.type = "password";
        }
    }
    function togglePasswordConfirmVisibility() {
        var passwordConfirmField = document.getElementById("PasswordConfirm");
        var showPasswordConfirmCheckbox = document.getElementById("ShowPasswordConfirm");

        if (showPasswordConfirmCheckbox.checked) {
            passwordConfirmField.type = "text";
        } else {
            passwordConfirmField.type = "password";
        }
    }
</script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}